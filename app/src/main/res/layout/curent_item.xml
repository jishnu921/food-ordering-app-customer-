<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="100dp"
        android:layout_marginVertical="5dp"
        android:elevation="4dp"
        app:cardCornerRadius="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yeonsungregular"
                android:text="total: "
                android:textSize="15dp"
                android:textColor="@color/GreenButton"
                app:layout_constraintStart_toStartOf="@+id/FoodName"
                app:layout_constraintTop_toBottomOf="@+id/FoodName" />

            <TextView
                android:id="@+id/totalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/GreenButton"
                android:fontFamily="@font/latobold"
                android:textSize="20dp"
                android:text="Rs1000"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/FoodName" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/FoodImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="12dp"
                android:src="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/roundImageView" />

            <TextView
                android:id="@+id/FoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/yeonsungregular"
                android:text="Herbal Pancake"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/FoodImage"
                app:layout_constraintStart_toEndOf="@+id/FoodImage"
                app:layout_constraintTop_toTopOf="@+id/FoodImage"
                app:layout_constraintVertical_bias="0.506" />

            <TextView
                android:id="@+id/FoodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/latoextrabold"
                android:text="Rs140"
                android:textColor="@color/GreenButton"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.595"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.395" />

            <TextView
                android:id="@+id/Quanity"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="Quanity: 10"
                android:background="@drawable/addtocart"
                android:fontFamily="@font/yeonsungregular"
                android:textSize="15dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/FoodPrice"
                app:layout_constraintStart_toStartOf="@+id/FoodPrice"
                app:layout_constraintTop_toBottomOf="@+id/FoodPrice" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>