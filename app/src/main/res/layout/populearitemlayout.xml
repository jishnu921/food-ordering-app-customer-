<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:elevation="4dp"
        android:layout_height="120dp"
        app:cardCornerRadius="22dp"
        android:layout_margin="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/PopulearItemImageView"
                app:shapeAppearanceOverlay="@style/roundImageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="12dp"
                android:src="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/FoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/yeonsungregular"
                android:text="Herbal Pancake"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/PopulearItemImageView"
                app:layout_constraintStart_toEndOf="@+id/PopulearItemImageView"
                app:layout_constraintTop_toTopOf="@+id/PopulearItemImageView"
                app:layout_constraintVertical_bias="0.506" />

            <TextView
                android:id="@+id/FoodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/latoextrabold"
                android:text="Rs140"
                android:textColor="@color/GreenButton"
                android:textSize="17dp"
                android:layout_marginEnd="35dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.595"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.395" />

            <TextView
                android:id="@+id/AddToCart"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/addtocart"
                android:gravity="center"
                android:text="Add To Cart"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/FoodPrice"
                app:layout_constraintStart_toStartOf="@+id/FoodPrice"
                app:layout_constraintTop_toBottomOf="@+id/FoodPrice" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>