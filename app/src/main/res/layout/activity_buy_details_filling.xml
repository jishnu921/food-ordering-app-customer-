<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buy_details_filling"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/backButtonButDetails"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/back_orenge"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yeonsungregular"
        android:textColor="@color/GreenButton"
        android:textSize="30dp"
        android:text="purchase details"
        android:gravity="center"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="16dp"
        android:background="@drawable/profile_box_layout"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:padding="7dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:fontFamily="@font/yeonsungregular"
            android:textSize="30dp"/>

        <EditText
            android:id="@+id/nameEditText"
            android:textColor="#858484"
            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:paddingStart="16dp"
        android:background="@drawable/profile_box_layout"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="7dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Address"
            android:fontFamily="@font/yeonsungregular"
            android:textSize="30dp"/>

        <EditText
            android:id="@+id/addressEditText"
            android:textColor="#858484"
            android:padding="7dp"
            android:minHeight="80dp"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:paddingStart="16dp"
        android:background="@drawable/profile_box_layout"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center">
        <TextView
            android:padding="7dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:fontFamily="@font/yeonsungregular"
            android:textSize="30dp"/>

        <EditText
            android:id="@+id/phoneEditText"
            android:textColor="#858484"
            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:paddingStart="16dp"
        android:background="@drawable/profile_box_layout"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center">
        <TextView
            android:textColor="#656565"
            android:padding="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:fontFamily="@font/yeonsungregular"
            android:textSize="20dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/cashondelivery"/>
    </LinearLayout>
    <LinearLayout
        android:paddingStart="16dp"
        android:background="@drawable/profile_box_layout"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center">
        <TextView
            android:textColor="#656565"
            android:padding="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount"
            android:textSize="20dp"
            android:fontFamily="@font/yeonsungregular" />

        <TextView
            android:id="@+id/totalAmountEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/latobold"
            android:gravity="end|center"
            android:inputType="none"
            android:textColor="@color/GreenButton"
            android:textSize="25dp" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="40dp"
        android:elevation="10dp"
        android:background="@drawable/rectanglebutton"
        android:id="@+id/placeOrderButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/GreenButton"
        android:fontFamily="@font/yeonsungregular"
        android:textSize="20dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Place My Order"/>
</LinearLayout>